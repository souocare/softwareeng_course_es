                        <select id="systemfields_` + String(parseInt(ids[ids.length - 1]) + 1) + `_1"  name="systemfields_` + String(parseInt(ids[ids.length - 1]) + 1) + `_1" style="width: 100%; height: 80px;" class="form-control select2-multiple_` + String(parseInt(ids[ids.length - 1]) + 1) + `" placeholder="Select one/multiple filters" onchange="Getvaluesselect(` + String(parseInt(ids[ids.length - 1]) + 1) + `)">
                            <option disabled selected value></option>
                            @foreach (var field in ViewBag.Systemfields)
                            {
                                <option value="@field">@field</option>

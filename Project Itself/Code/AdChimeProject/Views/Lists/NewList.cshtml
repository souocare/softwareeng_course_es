                        </select>
                    </div>

                    <div class="col-md-4">
                        <select id="systemfields_` + String(parseInt(ids[ids.length - 1]) + 1) + `_2"  name="systemfields_` + String(parseInt(ids[ids.length - 1]) + 1) + `_2" style="width: 100%;" class="form-control select2-multiple_` + String(parseInt(ids[ids.length - 1]) + 1) + `" placeholder="Select one/multiple filters">
                            <option disabled selected value></option>
                            <option value="equals">equals</option>
                            <option value="notequal">not equal to</option>
                        </select>
                    </div>

                    <div class="col-md-4" id="div3_` + String(parseInt(ids[ids.length - 1]) + 1) + `">
                        <select id="systemfields_` + String(parseInt(ids[ids.length - 1]) + 1) + `_3"  name="systemfields_` + String(parseInt(ids[ids.length - 1]) + 1) + `_3" style="width: 100%;" class="form-control select2-multiplethird_` + String(parseInt(ids[ids.length - 1]) + 1) + `" placeholder="Select one/multiple filters" multiple>
                            @foreach (var itemnome in ViewBag.Nomes)
                            {
                                <option value="@itemnome">@itemnome</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <br /><br />

            `;


        oldhtml.insertAdjacentHTML('beforeend', newhtmlthing);
        //alert("aaa");

        //var idsafter = [];

        //$('#addfilters > div').map(function () {
        //    idsafter.push(this.id);
        //});

        //for (let index = 0; index < idsafter.length; ++index) {
        //    $(".select2-multiple_" + String(ids[index])).select2({
        //        allowClear: true,
        //        placeholder: "Select option"
        //    });

        //    $(".select2-multiplethird_" + String(ids[index])).select2({
        //        allowClear: true,
        //        placeholder: "Select option/options"
        //    });
        //    //const element = ids[index];
        //    // ...use `element`...
        //}


        $(".select2-multiple_" + String(parseInt(ids[ids.length - 1]) + 1)).select2({
            allowClear: true,
            placeholder: "Select option"
        });

        $(".select2-multiplethird_" + String(parseInt(ids[ids.length - 1]) + 1)).select2({
            allowClear: true,
            placeholder: "Select option/options"
        });
    };


    function Getvaluesselect(id) {
        d = document.getElementById("systemfields_" + id + "_1").value;
            $.ajax({
                type: "POST",
                url: '@Url.Action("Addlog", "Home")',
                data: { elementvalue: d, idv: id },

                success: function (data) {
                    data = String(data).replace("select2-multiplethird_mudar", "select2-multiplethird_" + id)
                    document.getElementById("div3_" + id).innerHTML = data;
                    if (String(data).includes("<select")) {
                        $(".select2-multiplethird_" + id).select2({
                            allowClear: true,
                            placeholder: "Select option/options"
                        });
                    }

                },
                error: function () {
                }
            });
    };


    $(function () {

            var form = document.getElementById("myform");
        $(".submitar").click(function () {
            var idsfinais = [];

                $('#addfilters > div').map(function () {
                    idsfinais.push(this.id);
                });
                var output = [];
                var idsfinaislength = idsfinais.length;
                for (var i = 0; i < idsfinaislength; i++)
                {
                    var valoridf = idsfinais[i];
                    var obj = [];
                    //var selectum = document.getElementById("systemfields_" + String(valoridf) + "_1").value;
                    var selectum = $('#systemfields_' + String(valoridf) + '_1').val();
                    obj.push(selectum)
                    //var selectdois = document.getElementById("systemfields_" + String(valoridf) + "_2").value;
                    var selectdois = $('#systemfields_' + String(valoridf) + '_2').val();
                    obj.push(selectdois)
                    //obj.push(selectdois)
                    //var selecttres = document.getElementById("systemfields_" + String(valoridf) + "_3").value;
                    var selecttres = $('#systemfields_' + String(valoridf) + '_3').val();
                    obj.push(selecttres)
                    //obj.push(selecttres)

                    output.push(obj);
                }

                var idrecipient = document.getElementById("irecipientetexto").value;

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("NewList", "Home")",
                    data: { output: JSON.stringify(output), irecipientetexto: idrecipient },
                    dataType: "json",
                    success: function (data) {
                        window.location.href = data;
                    }
                });


            });
        })



</script>

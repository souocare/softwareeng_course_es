@model AdChimeProject.tTemplateSm


@{ ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<!-- slider_area_end -->
<!-- about_area_start -->
<div style="margin-top:20px;">
    <div>
        <div class="col-md-12">
            <div class="row">

                <div class="col-md-12" style="padding-left: 10px;">
                    <a href="@Url.Action("NewText", "Texts", null)" style="text-decoration:none;">
                        <img src="~/Content/Images/AddNew.png" style="width: 30px;" /> <span style="color:#E10028;">Create NEW SMS template</span>
                    </a>
                    &nbsp;&nbsp;&nbsp;
                    <a href="@Url.Action("MyTexts", "Texts", null)" style="text-decoration:none;">
                        <img src="~/Content/Images/MyLists.png" style="width: 30px;" /> <span style="color:#999999;">My SMS's</span>
                    </a>
                    <br /><br />
                </div>

            </div>


            <div class="row">

                <div class="col-md-2">

                    <p style="color:#E10028;">NEW SMS template</p>
                </div>
                <div class="col-md-10">

                </div>

            </div>


            <div class="row">

                <div class="col-md-1 col-sm-12">

                </div>
                <div class="col-md-5 col-sm-5">

                    @using (Html.BeginForm("NewCampaign", "Campaign", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data", style = "background-color: rgba(255, 255, 255, 0.6);" }))
                    {
        @Html.AntiForgeryToken()


                        <div class="form-horizontal">
                            <div class="row">

                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>



                            <div class="row">

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="Name" style="padding-top: 0px;">Template Name</label>
                                        <div class="col-md-7" style="padding-top: 4px; padding-right: 0px;">
                                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @required = "required", @style = "width: 95%;" })
                                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-2" style="padding-top: 4px;padding-left: 5px;padding-right: 0px;">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <br />

                            <div class="row">

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="Name">SMS Text</label>
                                        <div class="col-md-7" style="padding-top: 4px; padding-right: 0px;">
                                            @Html.TextAreaFor(m => m.Text, new { @class = "form-control", @required = "required", @style = "width: 95%;", @oninput = "onchangeevent();" })
                                            @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-2" style="padding-top: 4px;padding-left: 5px;padding-right: 0px;">
                                            <select class="form-control" onchange="getselectoptionvariables()" id="selectvariables">
                                                <option disabled="disabled" selected="selected">{Variable}</option>
                                                <option>Name</option>
                                                <option>Country</option>
                                                <option>Link</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>



                        </div>


                                        <input type="submit" onclick="return validateForm();" class="btn btn-primary btn-block btn-lg" value="Submit"> @*<div class="text-center small">Don't have an account? <a href="#">Sign up</a></div>*@}


                </div>


                <div class="col-md-6 col-sm-7">

                    <div class="smartphone" style="margin-top: 5px;">

                        <div class="content">
                            <div id="smartphoneSender" style="width:173px; height:23px; text-align: center;background-color: aliceblue;padding-top: 10px;font-size: 15px;color: grey;"></div>
                            <textarea name="cellphonetextarea" placeholder="" maxlength="829" rows="5" cols="25" class="mensagem contador-txt" style="width: 172px;height:205px;font-size:12px;resize: none;background-color:#D9EEF2; "></textarea>

                        </div>

                    </div>

                </div>

            </div>


        </div>

    </div>
</div>
<!-- about_area_end -->
<br />
<br />




@section scripts{
    <script></script>
    <script>
        function onchangeevent() {
            var textoninputarea = $('#Text').val();
            document.getElementsByName('cellphonetextarea')[0].placeholder = textoninputarea;
        }


        function getselectoptionvariables() {
            var variableselect = document.getElementById("selectvariables").value;
            var textbefore = document.getElementById("Text").value;
            document.getElementById("Text").value = textbefore + "{{" + variableselect + "}}";
            document.getElementById("selectvariables").selectedIndex = 0;
        }

    </script>
}


